{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "target": "es6",

  "lib": ["es2019", "DOM", "ES6", "DOM.Iterable", "ScriptHost"],
  "include": ["src/**/*", "src/**/*.svelte", "__tests__"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "checkJs": true,
    "paths": {
      "@accentoo/*": ["../libs/*"],
      "$components/*": ["./src/components/*"],
      "$common/*": ["./src/common/*"],
      "$constants": ["./src/constants"],
      "$types": ["./src/types"],
      "$stores/*": ["./src/stores/*"],
      "$services/*": ["./src/services/*"],
      "$utils/*": ["./src/utils/*"],
      "$views/*": ["./src/views/*"]
    },
    "moduleResolution": "Node",
    "types": ["svelte", "@types/dom-mediacapture-record", "jest"]
  },
}
